{
  "description": "Add links to a Feedlynx server",
  "manifest_version": 2,
  "name": "Feedlynx",
  "version": "0.1.5",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "permissions": ["notifications", "storage", "tabs"],

  "browser_action": {
    "default_icon": {
      "48": "icon.svg",
      "96": "icon.svg"
    },
    "default_title": "Feedlynx"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "feedlynx@wezm.net"
    }
  }
}
